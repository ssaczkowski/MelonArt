<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.gamePage.GeneroFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bangers"
            android:padding="20dp"
            android:text="@string/elige_tu_categor_a"
            android:textAlignment="center"
            android:textColor="@color/green_melon"
            android:textSize="50sp"
            android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_gravity="center">


    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        >


    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="90dp"

        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:elevation="2dp">

        <Button
            android:id="@+id/cardRockNacional"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:alpha="0.6"
            android:background="@drawable/rocknacional"
            android:fontFamily="@font/bangers"
            android:lineSpacingExtra="8sp"
            android:outlineProvider="bounds"
            android:shadowColor="@color/com_facebook_blue"
            android:singleLine="false"
            android:soundEffectsEnabled="true"
            android:text="Rock Nacional"
            android:textAlignment="center"
            android:textColor="@color/white_melon"
            android:textSize="30sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="90dp"

        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:elevation="2dp">

        <Button
            android:id="@+id/cardTrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.6"
            android:background="@drawable/trap"
            android:fontFamily="@font/bangers"
            android:text="Trap"
            android:textColor="@color/white_melon"
            android:textSize="40sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="90dp"

            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            android:elevation="2dp">

            <Button
                android:id="@+id/cardCumbia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.6"
                android:background="@drawable/cumbia"
                android:fontFamily="@font/bangers"
                android:text="Cumbia"
                android:textColor="@color/white_melon"
                android:textSize="40sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

     <LinearLayout
         android:layout_width="20dp"
         android:layout_height="10dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

     </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="500dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="90dp"

            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            android:elevation="2dp">

            <Button
                android:id="@+id/cardSalsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.6"
                android:background="@drawable/salsa"
                android:fontFamily="@font/bangers"
                android:text="Salsa"
                android:textColor="@color/white_melon"
                android:textSize="40sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="90dp"

            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            android:elevation="2dp">

            <Button
                android:id="@+id/cardClasico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.6"
                android:background="@drawable/clasic"
                android:fontFamily="@font/bangers"
                android:text="Clasico"
                android:textColor="@color/white_melon"
                android:textSize="40sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="90dp"

            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            android:elevation="2dp">

            <Button
                android:id="@+id/cardRockInternacional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:background="@drawable/rockinter"
                android:fontFamily="@font/bangers"
                android:text="Rock Internacional"
                android:textAlignment="center"
                android:textColor="@color/white_melon"
                android:textSize="25dp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>