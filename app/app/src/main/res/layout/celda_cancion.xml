<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:elevation="2dp"
    app:cardUseCompatPadding="true"
    android:padding="2dp"
    app:cardElevation="1dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="2dp">

            <ImageView
                android:id="@+id/imgFrgListaCanciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/album"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtFrgListaCancionesTitulo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Cancion de Alicia en el Pais"
                android:textColor="#4A613C"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFrgListaCancionesAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Bicicletas"
                    android:textColor="#4A613C"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txtFrgListaCancionesArtista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seru Giran"
                    android:textColor="#4A613C"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>